{% set prefix = 'header' %}
{% set attributes = attributes.setAttribute('id', 'header') %}
{% set classes = [
  prefix
] %}

<header{{ attributes.addClass(classes) }}>
  <div class="header__hatch"></div>
  <div class="header__inner container">
    <div class="row">
      <div class="col-6 col-lg-3 {{ prefix }}__logo__wrapper">
        <a href="{{ homepage_url }}" class="{{ prefix }}__logo">
          <img src="/{{ active_theme_path() ~ '/images/gt_honors_logo.svg' }}" alt="{{ 'Homepage'|t }}">
        </a>
      </div>
      <div class="col-6 col-lg-9 {{ prefix }}__menu">
        <a class="{{ prefix }}__mobile-menu-toggle btn" href="#mobile-menu" type="button" id="mobileMenuToggle" aria-haspopup="true" aria-expanded="false">
          <img class="collapsed" style="pointer-events: none;" src="/{{ active_theme_path() ~ '/src/icons/pictos/hamburger.svg' }}" alt="{{ 'Show menu'|t }}"/>
          <span class="collapsed sr-only">{{ 'Show menu'|t }}</span>
          <img class="expanded" style="pointer-events: none;" src="/{{ active_theme_path() ~ '/src/icons/pictos/close-custom.svg' }}" alt="{{ 'Hide menu'|t }}"/>
          <span class="expanded sr-only">{{ 'Hide menu'|t }}</span>
        </a>
        <div id="mainMenu" class="primary-menu" aria-labelledby="mobileMenuToggle">
          {{ menu }}
        </div>
        <a href="/search" class="{{ prefix }}__search btn">
          <img src="/{{ active_theme_path() ~ '/src/icons/pictos/search.svg' }}" alt="{{ 'Search'|t }}"/>
        </a>
      </div>
    </div>
  </div>
</header>
