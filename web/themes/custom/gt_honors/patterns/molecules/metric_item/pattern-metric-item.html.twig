{% set prefix = 'metric-item' %}
{% set classes = [
  prefix
] %}

<div{{ attributes.addClass(classes) }}>
  <div class="row">
    <div class="{{ prefix }}__title col">{{ title }}</div>
  </div>
  <div class="row">
    <div class="{{ prefix }}__description col">{{ description }}</div>
  </div>
</div>
